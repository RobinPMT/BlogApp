@model IEnumerable<Post>
@{
    ViewData["Title"] = "Home Page";
}

    <div class="text-center">
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card-body">
                        <img class="card-img-top" src="@item.PostImg" alt="@item.PostTitle" />
                        <div class="card-body">
                            <h5 class="card-title"><a href="/xemchua/@SlugGenerator.SlugGenerator.GenerateSlug(item.PostTitle)-@item.ID" @*asp-action="ViewPost" asp-route-id="@item.ID"*@>@item.PostTitle</a></h5>
                            <p class="card-text">@item.PostContent</p>
                        </div>
                    </div>
                </div>
                
                

            }

        </div>
    </div>
